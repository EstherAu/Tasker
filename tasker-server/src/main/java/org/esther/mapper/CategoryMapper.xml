<?xml version="1.0" encoding="UTF-8" ?>
<!--
    カテゴリー管理用マッパー（現時点では未使用。将来の機能拡張を見越して定義）
    @author Esther
    @since 2025/02/26
-->
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.esther.mapper.CategoryMapper">

    <select id="getAllCategories" resultType="org.esther.bean.Category">
        SELECT * FROM category
    </select>

    <delete id="deleteCategoryByIds">
        DELETE FROM category WHERE id IN
        <foreach collection="ids" separator="," open="(" close=")" item="id">
            #{id}
        </foreach>
    </delete>

    <update id="updateCategoryById" parameterType="org.esther.bean.Category">
        UPDATE category SET cateName=#{cateName} WHERE id=#{id}
    </update>

    <insert id="addCategory" parameterType="org.esther.bean.Category">
        INSERT INTO category SET date=#{date},cateName=#{cateName}
    </insert>
</mapper>